<h1>Nowy kontrakt</h1>
<% form_for [@player, @contract] do |f| -%>
  <%= f.error_messages %>
  <p>
    <%= f.label :team_id %><br />
    <%= f.select :team_id, @teams.map { |t| [t.name, t.id]} %>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date, :end_year => (Time.now.year + 2)%>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date, :start_year => Time.now.year, :end_year => (Time.now.year + 10) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end -%>

<%= link_to 'Back', @player %>
