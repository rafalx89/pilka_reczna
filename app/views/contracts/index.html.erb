<h1>Listing contracts</h1>

<table>
  <tr>
    <th>Player</th>
    <th>Team</th>
    <th>Start date</th>
    <th>End date</th>
  </tr>

<% @contracts.each do |contract| %>
  <tr>
    <td><%=h "#{contract.player.firstname} #{contract.player.surname}" %></td>
    <td><%=h contract.team.name %></td>
    <td><%=h contract.start_date %></td>
    <td><%=h contract.end_date %></td>
  </tr>
<% end %>
</table>

