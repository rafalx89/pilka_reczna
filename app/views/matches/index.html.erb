<h1>Listing matches</h1>

<table>
  <tr>
    <th>Team 1</th>
    <th>Team 2</th>
    <th>Matchday</th>
    <th>Score team 1</th>
    <th>Score team 2</th>
  </tr>

<% @matches.each do |match| %>
  <tr>
    <td><%=h match.team_1 %></td>
    <td><%=h match.team_2 %></td>
    <td><%=h match.matchday %></td>
    <td><%=h match.score_team_1 %></td>
    <td><%=h match.score_team_2 %></td>
    <td><%= link_to 'Show', match %></td>
    <td><%= link_to 'Edit', edit_match_path(match) %></td>
    <td><%= link_to 'Destroy', match, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New match', new_match_path %>